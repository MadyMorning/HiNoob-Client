.head-option-cart{
  width: 50%;
  height: 100%;
  float: right;
}

.head-option-counts text {
  float: left;
}

.head-option-counts image{
  float: left;
}

.head-option-cart image{
  float: left;
}

.head-option-cart text {
  float: left;
  margin-left: 90rpx;
}

.head .head-simpleInfo{
  width: 100%;
  height: 200rpx;
  margin-top: 50rpx;
}

.head-simpleInfo text{
  display: block;
  margin-bottom: 20rpx;
}

.head-simpleInfo .small {
  font-size: 25rpx;
}

.main .main-nav{
  display: inline-block;
  width: 250rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.main .main-imgs{
  width: 100%;
  height: 400rpx;
}

.main .selected {
  color: rgba(171, 149, 109, .8);
  border-bottom: 2px solid rgba(171, 149, 109, .8);
}

.main-params .property_name {
  width: 200rpx;
  color: #808080;
  text-align: center;
  font-size: 30rpx;
  display: inline-block;
}

.main-params .property_detail {
  flex: 1;
  color: #333;
  font-size: 30rpx;
  padding-right: 40rpx;
}

.main .main-protection{
  text-align: center;
}