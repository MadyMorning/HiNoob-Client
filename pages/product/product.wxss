@import "../tpls/base.wxss"; 

.head{
 text-align: center;
 overflow: hidden;
 position: relative;
}

.head::after{
  width: 100%;
  height: 20rpx;
  background-color:red;
}

.head .head-cart-icon{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top: 35rpx;
  right: 35rpx;
}

.head .head-image{
  width: 400rpx;
  height: 400rpx;
}

.head .head-option{
  width: 650rpx;
  height: 80rpx;
  background: #AB956D;
  border-radius: 40rpx;
  margin: 0 auto;
}

.head-option text{
  font-size: 25rpx;
  color: white;
  margin: 25rpx 0 0 40rpx;
}

.head-option image{
  width: 35rpx;
  height: 35rpx;
  margin: 25rpx 0 0 40rpx;
}

.head-option-counts {
  width: 50%;
  height: 100%;
  float: left;
}

